---
interface Crumbs {
  name: String;
  href: URL;
}

interface Props {
  title: String;
  crumbs?: Array<Crumbs>;
  heading?: String;
}

import '../styles/bootstrap.scss';

import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import ThemedSection from '../components/ThemedSection.astro';

const { title, crumbs, heading } = Astro.props;
---

<!doctype html>
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="description" content="Astro description" />
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <meta name="generator" content={Astro.generator} />
  <link rel="icon" type="image/png" href="/images/favicon.png" />
  <title>{title} - Accessible Community</title>
</head>


<body>
  <Header title={title} crumbs={crumbs} />
  <main id="main-content">
    <slot name="header">
      <ThemedSection theme="primary">
        <h1 class="display-3 fw-bold text-center text-white">{ heading || title }</h1>
      </ThemedSection>
    </slot>
    <slot />
  </main>
  <Footer />
</body>
</html>