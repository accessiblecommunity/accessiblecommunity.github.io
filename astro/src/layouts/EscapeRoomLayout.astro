---
import Layout from "./Layout.astro";
import HeaderER from "../components/HeaderER.astro";
import FooterER from "../components/FooterER.astro";
import type { Breadcrumbs, PageMetadata } from "../lib/types";

interface Props {
  title: string;
  metadata?: PageMetadata;
  crumbs?: Breadcrumbs;
}

const { title, metadata, crumbs } = Astro.props as Props;
---

<Layout {title} {metadata} {crumbs} hideSiteHeader={true}>
  <slot name="head" slot="head" />
  <HeaderER {title} slot="siteHeader" />
  <slot name="header" slot="header" />
  <slot />
  <FooterER slot="footer" />
</Layout>

