---
import { getTipCatalog } from "../../lib/tips";

export async function getStaticPaths() {
  const catalog = await getTipCatalog();

  return catalog.tips.map(({ data, slug }) => ({
    params: { slug },
    props: { 
      catalog,
      title: data.title,
    }
  }));
}

import TipLayout from "../../layouts/TipLayout.astro";

const { slug } = Astro.params;
const { catalog } = Astro.props;
---

<TipLayout slug={slug} catalog={catalog} />
