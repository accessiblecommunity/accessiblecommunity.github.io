---
import { getBlogTopics } from "../../../lib/blog";
import { startCase } from "lodash-es";

const topics = await getBlogTopics();
const title = "Topics";
const crumbs = [
  {
    name: "Home",
    href: "/",
  },
  {
    name: "Blog",
    href: "/blog",
  },
];

import ImageHeading from "../../../components/ImageHeading.astro";
import Layout from "../../../layouts/Layout.astro";
import ThemedSection from "../../../components/ThemedSection.astro";
---

<Layout crumbs={crumbs} title={title}>
  <ImageHeading image="blog" slot="header">
    <strong>Blogs</strong> by topic
  </ImageHeading>
  <ThemedSection style="tertiary" py={0}>
    <h2 class="text-info-emphasis display-5" set:text={title} />
    <ul>
      {
        topics.map((cat) => (
          <li>
            <a href={`/blog/topics/${cat}`}>{startCase(cat)}</a>
          </li>
        ))
      }
    </ul>
  </ThemedSection>
</Layout>
