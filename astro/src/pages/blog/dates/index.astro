---
import { getBlogDates } from '../../../lib/blog';
import { kebabCase } from 'lodash-es';

const dates = await getBlogDates();
const title = 'Dates';
const crumbs = [{
    name: 'Home', href: "/"
  }, {
    name: 'Blog', href: "/blog"
  }]

import BlogHeading from '../../../components/BlogHeading.astro';
import Layout from "../../../layouts/Layout.astro";
import ThemedSection from "../../../components/ThemedSection.astro";
---
<Layout crumbs={crumbs} title={title}>
  <BlogHeading slot="header">
    <strong>Blogs</strong> by date
  </BlogHeading>
  <ThemedSection style="tertiary" py={0}>
    <h2 class="text-info-emphasis display-5" set:text={title} />
    <ul>
      { dates.map(month =>
        <li>
          <a href={`/blog/dates/${kebabCase(month)}`}>{ month }</a>
        </li>
      )}
    </ul>
</ThemedSection>
</Layout>