---
import { getCollection } from 'astro:content';
import { getBlogCategories, orderByRecent } from '../../../lib/blog';
import { startCase } from 'lodash-es';

export async function getStaticPaths() {
  const categories = await getBlogCategories();
  const crumbs = [{
    name: 'Home', href: "/"
  }, {
    name: 'Blog', href: "/blog"
  }, {
    name: 'Categories', href: "/blog/categories"
  }]

  return categories.map(category => ({
    params: { tag: category }, props: { crumbs, category },
  })); 
}

const { crumbs, category } = Astro.props;
const categoryBlogs = await getCollection('blogs', ({ data }) => {
  return data.tags.includes(category);
});
const orderedBlogs: Array<object> = await orderByRecent(categoryBlogs)

import BlogLayout from '../../../layouts/BlogLayout.astro';
---

<BlogLayout
  title={`${startCase(category)} Blogs`}
  crumbs={crumbs}
  blog={orderedBlogs[0]}
  catalog={{ blogs: orderedBlogs }}
  sidebar={true}
/>
  