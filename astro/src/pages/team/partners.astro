---
import Layout from "../../layouts/Layout.astro";
import ImageHeading from "../../components/ImageHeading.astro";
import ThemedSection from "../../components/ThemedSection.astro";

import { Image } from "astro:assets";
import dequeLogo from "../../images/partner-logos/Deque_Logo_HeroBlue_cropped.png";
import knowbilityLogo from "../../images/partner-logos/knowbility-logo-large.png";
import levelAccessLogo from "../../images/partner-logos/Color Level Access Logo.png";
import mitreLogo from "../../images/partner-logos/MITRE_cropped.png";
import pearsonLogo from "../../images/partner-logos/pearson logo.png";
import teachAccessLogo from "../../images/partner-logos/teach_access_cropped.png";
import tetraLogicalLogo from "../../images/partner-logos/Tetralogical-full-logo-without-padding-color-for-light-backgrounds.png";
import tpgiLogo from "../../images/partner-logos/TPGi-FullColor.png";

const crumbs = [
  {
    name: "Home",
    href: "/",
  },
  {
    name: "Team",
    href: "/team",
  },
];
---

<Layout crumbs={crumbs} title="Partners">
  <ImageHeading image="team" slot="header">
    <strong>Partners</strong>
  </ImageHeading>
  <ThemedSection style="secondary">
    <p class="lead mb-5 text-center">
      Thank you to the organizations that partner with us and support our work
      in various ways.
    </p>
    <ul class="list-inline list-unstyled text-center partner-logos rounded-3">
      <li class="list-inline-item col-md-3 m-4">
        <a
          href="https://www.deque.com/"
          target="_blank"
          rel="noopener noreferrer"
        >
          <Image src={dequeLogo} width="150" alt="Deque" />
        </a>
        <li class="list-inline-item col-md-3 m-4">
          <a
            href="https://knowbility.org/"
            target="_blank"
            rel="noopener noreferrer"
          >
            <Image src={knowbilityLogo} width="150" alt="Knowbility" />
          </a>
          <li class="list-inline-item col-md-3 m-4">
            <a
              href="https://www.levelaccess.com/"
              target="_blank"
              rel="noopener noreferrer"
            >
              <Image src={levelAccessLogo} width="150" alt="Level Access" />
            </a>
            <li class="list-inline-item col-md-3 m-4">
              <a
                href="https://www.pearson.com/en-us.html"
                target="_blank"
                rel="noopener noreferrer"
              >
                <Image src={pearsonLogo} width="150" alt="Pearson" />
              </a>
              <li class="list-inline-item col-md-3 m-4">
                <a
                  href="https://teachaccess.org/"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <Image src={teachAccessLogo} width="150" alt="Teach Access" />
                </a>
                <li class="list-inline-item col-md-3 m-4">
                  <a
                    href="https://tetralogical.com/"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <Image
                      src={tetraLogicalLogo}
                      width="150"
                      alt="TetraLogical"
                    />
                  </a>
                  <li class="list-inline-item col-md-3 m-4">
                    <a
                      href="https://www.tpgi.com/"
                      target="_blank"
                      rel="noopener noreferrer"
                    >
                      <Image src={tpgiLogo} width="150" alt="TPGi" />
                    </a>
                  </li>
                </li>
              </li>

              <style lang="scss">
                @import "../../styles/dark-mode";

                @include color-mode(dark) {
                  .partner-logos {
                    background-color: var(--bs-secondary-text-emphasis);
                  }
                }
              </style>
            </li>
          </li>
        </li>
      </li>
    </ul>
  </ThemedSection>
</Layout>
