<style>
  .img-wp {
    width: 80%;
    height: auto;
  }
  .img-bb {
    width: 70%;
    height: auto;
  }
  .card-img-top {
    height: auto;
  }
  .card-title {
    color: var(--bs-dark);
    font-size: 1.3rem;
  }
  h2, h3, h4 {
    color: var(--bs-info);
    font-weight: 600;
    margin-bottom: 0.5em;
  }
  .logo {
    height: auto;
    width: 100%;
  }
  a {
    --bs-link-color-rgb: var(--bs-info-rgb);
  }
  p {
    margin-bottom: 0.5em;
  }

  p.lead {
    margin-bottom: 0.75em;
  }
</style>