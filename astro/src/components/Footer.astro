        padding: 2% 5% 2% 5%;
    }

    .nav-footer {
        margin-bottom: 2%;
    }

    .social-icon {
        margin: 14.5px;
        width: 29px;
        height: 29px;
    }

    .legal-footer {
        padding-top: 2%;
    }
</style>