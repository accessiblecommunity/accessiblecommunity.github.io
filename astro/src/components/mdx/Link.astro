---
import ExternalLink from '../ExternalLink.astro';

interface Props {
  href: string;
  // Any additional HTML classes to apply to the link.
  title?: string;
}

const {
  href,
  title = undefined,
} = Astro.props;
const external = href.startsWith("http");
---
{
  external
  ? <ExternalLink href={href} inline title={title}><slot /></ExternalLink>
  : <a href={href} title={title} class="link-offset-1"><slot /></a>
}
