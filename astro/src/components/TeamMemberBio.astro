---
import { isEmpty } from "lodash-es";

import SocialLinks from "./SocialLinks.astro";
import TeamVignette from "./TeamVignette.astro";

const { member } = Astro.props;
const { name, links } = member.data;
const { Content } = await member.render();
---

<div
  class="team-bio py-2 pe-1 d-flex justify-content-between align-items-end border-bottom mb-3"
>
  <TeamVignette
    member={member}
    highlightName={true}
    branded={true}
    element="h2"
    valign="end"
    responsive={true}
  />
  {
    !isEmpty(links) && (
      <div class="d-none d-md-block display-5">
        <SocialLinks links={links} adjective={`${name}'s`} />
      </div>
    )
  }
</div>
<Content />

<style is:global>
  .team-bio .vignette-name {
    color: var(--bs-primary-text-emphasis);
    margin-bottom: 0.2rem;
  }
  .team-bio .vignette-title {
    font-size: 1.5rem;
  }
</style>
