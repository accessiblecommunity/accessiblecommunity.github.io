---
import { Image } from "astro:assets";
import type { ImageMetadata } from "astro";

interface Props {
  image: ImageMetadata;
  alt?: string | null;
  title: string;
  tagline: string;
  theme: string;
  href: string;
  buttonText: string;
  borderClass?: string;
  titleClass?: string;
  colClass?: string;
}

const { 
  image, 
  alt, 
  title, 
  tagline, 
  theme, 
  href, 
  buttonText,
  borderClass = "border-dark",
  titleClass,
  colClass = "col"
} = Astro.props;

const finalTitleClass = titleClass || `text-${theme}`;
---

<div class={colClass}>
  <div class={`card border ${borderClass}`}>
    <Image
      src={image}
      class="card-img-top"
      alt={alt || null}
    />
    <div class="card-body">
      <h3 class={`card-title ${finalTitleClass}`} set:text={title} />
      <p class="card-text" set:text={tagline} />
      <a
        href={href}
        class={`btn btn-${theme}`}
        set:text={buttonText}
      />
    </div>
  </div>
</div>

<style>
  .card-img-top {
    height: auto;
  }
</style>

