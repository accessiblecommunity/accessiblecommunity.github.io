---
interface Props {
  theme?: string;
  newsletters?: boolean;
  announcements?: boolean;
  border?: number;
  defaultWidth?: boolean;
}

const {
  theme = "info-contrast",
  newsletters = false,
  announcements = false,
  border = 2,
  defaultWidth = false,
} = Astro.props;
---

<div
  class:list={[
    !defaultWidth && "col-lg-5",
    "p-4 bg-body",
    border && `border border-${border} border-${theme} rounded`,
  ]}
>
    <slot>
      <p class="lead">
        Want a <strong class="text-primary">free and simple</strong> way to learn
        about accessibility?
      </p>
      <p>
        Sign up for our weekly "Tip of the Week" email to receive quick
        accessibility tips that can improve your website, social media, events,
        and more.
      </p>
      <p>
        Fill out this short form to sign up. We do not <a href="/privacy-policy"
          >sell or share your data</a
        >.
      </p>
      <p>Required fields have an asterisk (<span class="asterisk">*</span>).</p>
    </slot>
  <form
    action="https://buttondown.com/api/emails/embed-subscribe/accessible-community"
    method="post"
    class="embeddable-buttondown-form"
  >
        <label for="emailField" class="form-label mb-1 required-field"
          >Email address</label
        ><span class="asterisk"></span>
        <input
          type="email"
          name="email"
          class="form-control w-100"
          id="emailField"
          autocomplete="email"
          placeholder="address@domain.com"
          required
        />
        <label for="firstNameField" class="form-label mt-2 mb-1"
          >First name</label
        ><span class="asterisk"></span>
        <input
          type="text"
          id="firstNameField"
          name="metadata__fname"
          class="form-control w-100"
          placeholder="Your first name"
          autocomplete="first-name"
        />
      <input type="submit" value="Subscribe" class="btn btn-info w-100 mt-3" />
  </form>
</div>

<style>
  .form-label {
    font-size: 90%;
  }
</style>
