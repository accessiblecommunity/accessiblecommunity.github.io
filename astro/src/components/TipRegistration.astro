  *:focus-visible, .form-field:focus {
    outline: 6px dashed #041058;
    outline-offset: 1px 2px;
    box-shadow: none;
    border-radius: 0.5rem;
  }

  .tip-form {
    border: 3.5px solid;
    border-radius: 0.5rem;
  }
</style>