---
interface Props {
  theme?: string;
  style?: string;  // 'body' or 'subtle'
  text?: boolean;
  border?: number;
  class?: string
}

const {
  theme = undefined,
  style = undefined,
  text = true,
  border = 0,
  class: extraClasses = "",
} = Astro.props;

import { getBackgroundAndText, getBorder } from '../lib/themes.ts'

const bgAndTextClasses = getBackgroundAndText(theme, style, text);
const borderClasses = getBorder(border, theme, style == 'subtle');
---
<div class:list={['p-4', bgAndTextClasses, borderClasses, extraClasses ]}>
  <slot />
</div>